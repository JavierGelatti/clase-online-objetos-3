{
  "name": "clase-online",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@mojotech/json-type-validation": "^3.1.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/express-ws": "^3.0.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.30",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/uuid": "^7.0.2",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "semantic-ui-react": "^0.88.2",
    "typescript": "^3.7.5",
    "uuid": "^7.0.2"
  },
  "scripts": {
    "build-server:dev": "(rm server_build/index.js ||:) && webpack --config src/server/webpack.config.js",
    "build-server:prod": "webpack -p --config src/server/webpack.config.js",
    "start-server": "node server_build/index.js",
    "watch:dev-server": "nodemon",
    "watch:dev-client": "react-scripts start",
    "start": "npm run start-server",
    "build": "react-scripts build && npm run build-server:prod",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "nodemonConfig": {
    "exec": "npm run build-server:dev && npm run start-server",
    "watch": [
      "src/server"
    ],
    "ext": "js,ts",
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.test.ts"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:8080",
  "devDependencies": {
    "@types/express": "^4.17.3",
    "nodemon": "^2.0.2",
    "ts-loader": "^6.2.2",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "engines": {
    "node": "13.11.0"
  }
}
